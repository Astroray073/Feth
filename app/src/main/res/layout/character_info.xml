<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DefaultContainer"
    android:orientation="vertical">

    <LinearLayout
        style="@style/DefaultListItem"
        android:orientation="vertical">

        <com.kyigames.feth.view.LabelWithBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:text="@string/crest" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/character_crest_none_text"
                style="@style/Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/none" />

            <LinearLayout
                android:id="@+id/character_crest_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.kyigames.feth.view.ClassAbilityListItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.kyigames.feth.view.ClassAbilityListItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout style="@style/DefaultListItem">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/initial_class"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/character_initial_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="character_initial_class" />
    </LinearLayout>

    <LinearLayout style="@style/DefaultListItem">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preferred_gifts"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/preferred_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Carnation/Armored Bear Stuffy/Monarch Studies Book/Board Game" />
    </LinearLayout>

    <LinearLayout style="@style/DefaultListItem">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/non_preferred_gifts"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/non_preferred_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Carnation/Armored Bear Stuffy/Monarch Studies Book/Board Game" />

    </LinearLayout>

    <LinearLayout style="@style/EndListItem">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preferred_tea"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/preferred_tea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="preferred_tea" />

    </LinearLayout>

    <com.kyigames.feth.view.LabelWithBar
        style="@style/LabelWithBar"
        android:padding="0dp"
        app:text="@string/class_info_unique_ability" />

    <com.kyigames.feth.view.ClassAbilityListItem
        android:id="@+id/character_info_unique_ability"
        android:layout_width="match_parent"
        android:layout_height="?android:listPreferredItemHeightSmall"
        android:paddingTop="4dp" />
</LinearLayout>